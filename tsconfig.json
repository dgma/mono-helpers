{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src", "./configs"]
}
